.border.rounded.p-3.mb-2.ml-5
    h4 ##{comment.id} #{comment.author}
    p #{comment.text}
    .text-muted.text-right: =comment.creationTimeFormatted
    .row
        a.btn.btn-warning.mx-2(href="/comment/update/#{comment.id}") Update
        form(action="/comment/delete/#{comment.id}", method="post",
                onsubmit="return confirm('Are you want to delete this comment?')")
            button.btn.btn-danger.mx-2(type="submit") Delete
