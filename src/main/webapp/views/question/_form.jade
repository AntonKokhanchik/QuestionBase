input#id(type='hidden', name='id' value=question.id)

.form-group
    label(for='author') Author
    input#author.form-control(type='text', name='author' value=question.author)
.form-group
    label(for='text') Text
    textarea#text.form-control(name='text') #{question.text}

button.btn.btn-success(type='submit') Save